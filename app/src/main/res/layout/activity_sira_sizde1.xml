<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SiraSizde1">

    <ImageView
        android:id="@+id/ssResim"
        android:layout_width="238dp"
        android:layout_height="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.192"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/ssYasamT"
        android:layout_width="390dp"
        android:layout_height="32dp"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif-medium"
        android:text="Yaşam Tarihi: "
        android:textColor="@color/teal_200"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ssResim"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/ssAdSoyad"
        android:layout_width="389dp"
        android:layout_height="34dp"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif-medium"
        android:text="İsim Soyisim:"
        android:textColor="@color/teal_200"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ssResim"
        app:layout_constraintVertical_bias="0.12" />

    <TextView
        android:id="@+id/ssHakkinda"
        android:layout_width="385dp"
        android:layout_height="29dp"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif-medium"
        android:text="Hakkında:"
        android:textColor="@color/teal_200"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.846"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ssResim"
        app:layout_constraintVertical_bias="0.255" />

    <Button
        android:id="@+id/ssGeri"
        android:layout_width="172dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#00BCD4"
        android:text="GERİ"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ssHakkinda"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/ssIleri"
        android:layout_width="172dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#00BCD4"
        android:text="İLERİ"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ssHakkinda"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>